@model IEnumerable<Services.Models.OrderLocal>
@{
    Layout = null;
}
<table class="table" id="allOrdersTable">
    <thead>
    <th>
        @Html.DisplayNameFor(model => model.Id)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.SerialNo)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.DateTime)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Status)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Address)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.RestName)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Amount)
    </th>



    @*<th>
            @Html.DisplayNameFor(model => model.DeliveryCost)
        </th>*@

    <th></th>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            var cls = "";
            if (item.Status == "Placed")
            {
                cls = "order_placed";
            }

            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RestName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>


                @*<td>
                        @Html.DisplayFor(modelItem => item.DeliveryCost)
                    </td>*@

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

