@model IEnumerable<Services.Models.ListItemLocal>

@{
    ViewBag.Title = "View Partners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Partners</h2>

<p>
    @Html.ActionLink("Create New", "PartnerCreate")
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Opens)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Closes)
        </th>
        <th>
            Menu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.ActionLink(item.Name, "Details", "Partner", new { id = item.Id}, new {})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Opens)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Closes)
        </td>
        <td>
            @Html.ActionLink("Menu", "Index", "MenuItems", new { id = item.Id}, new {})
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) @*|
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
