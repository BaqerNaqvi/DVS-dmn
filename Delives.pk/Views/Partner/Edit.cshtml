@model Services.Models.ListItemLocal

@{
    ViewBag.Title = "Create Partner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    if (Model != null && Model.Categoreis != null && Model.Categoreis.Any())
    {
        foreach (var cat in Model.Categoreis)
        {
            listItems.Add(new SelectListItem
            {
                Text = cat.Name,
                Value = cat.CatId.ToString()
            });

        }
    }

}



